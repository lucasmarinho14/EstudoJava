package exercicio5;

import java.util.Scanner;
import java.util.Locale;

public class Main {

	public static void main(String[] args) {
		//Fazer um programa para ler o código de uma peça 1, o número de peças 1, o valor unitário de cada peça 1, o
		//código de uma peça 2, o número de peças 2 e o valor unitário de cada peça 2. Calcule e mostre o valor a ser pago.
		
		Locale.setDefault(Locale.US);
		
		int produto1,quantidade1,produto2,quantidade2;
		double valor1,valor2valorTotal;
		int ;
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Digite o codigo do produto 1, quantidade de produtos, e o seu valor unitário: ");
		
		produto1 = sc.nextInt();
		quantidade1 = sc.nextInt();
		valor1 = sc.nextInt();
		
		System.out.println("Digite o codigo do produto 2, quantidade de produtos, e o seu valor unitário: ");
		
		produto2 = sc.nextInt();
		quantidade2 = sc.nextInt();
		valor2 = sc.nextInt();
		
		valorTotal = (quantidade1 * valor1) + (quantidade2 * valor2);
		
		System.out.println("O valor total a pagar é"+ valorTotal);
				
		
		
		sc.close();

	}

}
